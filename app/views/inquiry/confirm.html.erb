
<section id="contact-page">
        <div class="container" style="margin-bottom:75px;">
            <%= form_for(@inquiry, :url => inquiry_thanks_path)  do |f| %>
            <div class="center" style="margin-top:75px;">
                <h2>確認ページ</h2>
                <p class="lead">下記ページでよろしければ送信してください</p>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-8">
              <% if @inquiry.errors.any? %>
                <div class="alert alert-danger" role="alert">
                  <strong>入力内容にエラーがあります</strong>
                  <ul>
                    <% @inquiry.errors.each do |attr, msg| %>
                      <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <table class="table">
                <tr>
                  <th>名前</th>
                  <td><%= f.hidden_field :name %>
        <%= @inquiry.name %></td>
                </tr>
                <tr>
                  <th>メールアドレス</th>
                  <td><%= f.hidden_field :email %>
        <%= @inquiry.email %></td>
                </tr>
                <tr>
                  <th>お問い合わせ内容</th><br>
                  <td>        <%= f.hidden_field :message %>
        <%= simple_format(@inquiry.message) %></td>
                </tr>
              </table>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-8"></div>
              <div class="col-md-2">
              <%= f.submit '確認', class: 'btn btn-primary' %>
              </div>
            <% end %>
            </div>
            <div class="col-md-2"></div>
        </div><!--/.container-->
    </section>
